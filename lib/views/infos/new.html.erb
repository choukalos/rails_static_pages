<%= stylesheet_link_tag 'widgEditor' %>
<%= javascript_include_tag 'widgEditor' %>

<h1>New info</h1>

<% form_for(@info) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :permalink %><br />
    <%= f.text_field :permalink %>
  </p>
  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :content %><br />
    <%= f.text_area :content , :class => 'widgEditor'%>
  </p>
  </p>
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', infos_path %>